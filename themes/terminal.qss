/*
Terminal theme for Calculator UI.
*/

QWidget {
    background-color: rgb(0, 0, 0);
}

QLineEdit {
    background-color: rgb(0, 0, 0);
    border: 1px solid rgb(30, 255, 0);
    border-radius: 10px;
    color: rgb(30, 255, 0);
    selection-color: rgb(0, 0, 0);
    selection-background-color: rgb(30, 255, 0);
}

QPushButton {
    background: rgb(0, 0, 0);
    border-style: solid;
    border-width: 1px;
    border-radius: 10px;
    color: rgb(30, 255, 0);
    padding: 5px;
}
